<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="703.0" prefWidth="934.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.frontend.fe_controllers.RecipeViewController">
    <children>
        <MenuBar prefHeight="0.0" prefWidth="633.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="676.0" prefWidth="933.0" VBox.vgrow="ALWAYS">
            <children>
                <ListView fx:id="ListOfRecipe_s" layoutX="345.0" layoutY="74.0" onMouseClicked="#onRecipeSelect" prefHeight="313.0" prefWidth="190.0" style="-fx-font-weight: bold; -fx-font-size: 16px;">
                </ListView>
                <Button fx:id="addRecipe" layoutX="389.0" layoutY="523.0" mnemonicParsing="false" onAction="#addRecipe" prefHeight="25.0" prefWidth="103.0" text="Add Recipe" />
                <TextField fx:id="RecipeName" layoutX="64.0" layoutY="31.0" />
                <Text fill="#db5442" layoutX="701.0" layoutY="406.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Text>
                <TextField fx:id="RecipeDetails" layoutX="581.0" layoutY="415.0" prefHeight="142.0" prefWidth="318.0" />
                <TableView fx:id="IngredientTable" layoutX="12.0" layoutY="100.0" prefHeight="210.0" prefWidth="318.0">
                    <columns>
                        <TableColumn fx:id="ingredientColumn" prefWidth="113.0" text="Name" />
                        <TableColumn fx:id="unitColumn" prefWidth="95.0" text="Unit" />
                        <TableColumn fx:id="amountColumn" prefWidth="67.0" text="Amount" />
                    </columns>
                </TableView>
                <Button fx:id="addIngredient" layoutX="5.0" layoutY="62.0" minWidth="103.0" mnemonicParsing="false" onAction="#addIngredientClicked" prefHeight="26.0" prefWidth="103.0" style="-fx-background-color: black;" text="Add Ingredient" textFill="WHITE" />
                <TextField fx:id="addAmount" editable="false" layoutX="198.0" layoutY="62.0" maxWidth="125.0" prefHeight="26.0" prefWidth="74.0" promptText="Amount" />
                <ComboBox fx:id="addUnit" layoutX="271.0" layoutY="62.0" prefHeight="26.0" prefWidth="68.0" promptText="Unit" />
                <TextField fx:id="addIngredientNameText" layoutX="114.0" layoutY="62.0" prefHeight="26.0" prefWidth="86.0" promptText="Name" />
                <ListView fx:id="tagsListView" layoutX="22.0" layoutY="350.0" prefHeight="128.0" prefWidth="279.0">
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#removeTagClicked" text="Remove Tag" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </ListView>
                <Label layoutX="142.0" layoutY="321.0" prefHeight="27.0" prefWidth="42.0" text="Tags" textFill="#db5442">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="addTagTextField" layoutX="95.0" layoutY="491.0" prefHeight="25.0" prefWidth="134.0" promptText="Add Tag" />
                <Button fx:id="addTagButton" layoutX="128.0" layoutY="533.0" mnemonicParsing="false" onAction="#addTagClicked" prefHeight="25.0" prefWidth="63.0" text="Add Tag" textFill="#db5442" />
                <TextArea fx:id="recipeDescText" layoutX="542.0" layoutY="75.0" prefHeight="311.0" prefWidth="383.0" wrapText="true" />
                <Label fx:id="commentsLabel1" layoutX="701.0" layoutY="40.0" text="Description" textFill="#db5442">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
